<h2>New book</h2>
<%= form_with model: new_book,url: books_path , local: true do |f| %>
  <div class="field mb-2">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <div class="field mb-2">
    <%= f.label :body %><br />
    <%= f.text_area :body, autofocus: true, class: "form-control" %>
  </div>
  <%= f.submit'Create Book',class: "btn btn-success btn-sm" %>
<% end %>