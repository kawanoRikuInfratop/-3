<div class="container">
  <% if @user.errors.any? %>
  <h3 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <% @user.errors.full_messages.each do |message| %>
    <li class="text-danger"><%= message %></li>
  <% end %>
<% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local: true do |f| %>
      <div class="field mb-3 form-group">
        <%= f.label :name %></br>
        <%= f.text_field :name,autofocus: true, class: "form-control" %>
      </div>

      <div class="field mb-3 form-group">
        <label for="inputImage">Image</label></br>
        <%= f.attachment_field :profile_image, placeholder: "選択されていません" %>
      </div>

      <div class="field mb-3 form-group">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction,autofocus: true, class: "form-control"%>
      </div>
        <%= f.submit 'Update User',class: "btn btn-sm btn-secondary" %>
      <% end %>
      </div>
  </div>
</div>